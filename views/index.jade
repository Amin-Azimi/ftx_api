extends layout

block content
  

  header 
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.fixed-top
      .container-fluid
        a.navbar-brand(href="#")
          svg.bi.bi-x-diamond(xmlns="http://www.w3.org/2000/svg",width="16",height="16",fill="currentColor",viewBox="0 0 16 16")
            path(d="M7.987 16a1.526 1.526 0 0 1-1.07-.448L.45 9.082a1.531 1.531 0 0 1 0-2.165L6.917.45a1.531 1.531 0 0 1 2.166 0l6.469 6.468A1.526 1.526 0 0 1 16 8.013a1.526 1.526 0 0 1-.448 1.07l-6.47 6.469A1.526 1.526 0 0 1 7.988 16zM7.639 1.17 4.766 4.044 8 7.278l3.234-3.234L8.361 1.17a.51.51 0 0 0-.722 0zM8.722 8l3.234 3.234 2.873-2.873c.2-.2.2-.523 0-.722l-2.873-2.873L8.722 8zM8 8.722l-3.234 3.234 2.873 2.873c.2.2.523.2.722 0l2.873-2.873L8 8.722zM7.278 8 4.044 4.766 1.17 7.639a.511.511 0 0 0 0 .722l2.874 2.873L7.278 8z")
        button.navbar-toggler(type="button",data-mdb-toggle="collapse",data-mdb-target="#mainNavbar",aria-controls="mainNavabr",aria-expanded="false",aria-label="Toggle navigation")
          i.fas.fa-bars
        .collapse.navbar-collapse(id="mainNavabr")
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item.active
              a.nav-link(href="#intro") Home
            li.nav-item
              a.nav-link(href="#intro") About us
            li.nav-item
              a.nav-link(href="#intro") Contact us
  main.my-5
    .container
      .row.mb-5 
        video#my-video.video-js(controls='', preload='auto', width=740,height=450, data-setup='{}',poster="/images/OZ75PD0.jpg")
          source(src='#{source}', type='application/x-mpegURL')
          p.vjs-no-js
            | To view this video please enable JavaScript, and consider upgrading to a
            | web browser that
            a(href='https://videojs.com/html5-video-support/', target='_blank') supports HTML5 video
      -for match in mlist
        .row.mb-1
          .col-12
            p.mb-0=match.matchDate
        .row.shadow.align-items-center.mb-3.border.border-2.border-warning(style="border-style: dashed !important;")
          .col-1.my-2
            img.img-fluid(src=match.homelogo)
          .col-4
            h3=match.hometeam 
          .col-2.text-center.text-light
            button.btn.btn-success.btn-rounded.btn-block(type="button",data-mdb-ripple-color="#ffffff",onclick=getPlayUrl())=match.matchtime
             i.fas.fa-download.ms-1
            small.text-dark=match.league
          .col-4
            h3.float-end=match.awayteam
          .col-1.my-2
            img.img-fluid(src=match.awaylogo)
      

      script(src='https://unpkg.com/video.js/dist/video.js')
      script(src='https://github.com/videojs/http-streaming/releases/download/v2.9.1/videojs-http-streaming.min.js')

  style.
    .video-js.vjs-menu-button-inline.vjs-slider-active.video-js.vjs-menu-button-inline:focus,.video-js .vjs-menu-button-inline:hover,.video-js.vjs-no-flex .vjs-menu-button-inline{width:10em}.video-js .vjs-controls-disabled .vjs-big-play-button{display:none!important}.video-js .vjs-control{width:3em}.video-js .vjs-menu-button-inline:before{width:1.5em}.vjs-menu-button-inline .vjs-menu{left:3em}.video-js .vjs-load-progress div,.vjs-seeking .vjs-big-play-button,.vjs-waiting .vjs-big-play-button{display:none!important}.video-js .vjs-mouse-display:after,.video-js .vjs-play-progress:after{padding:0 .4em .3em}.video-js.vjs-ended .vjs-loading-spinner{display:none}.video-js.vjs-ended .vjs-big-play-button{display:block!important}.video-js.vjs-paused .vjs-big-play-button,.vjs-paused.vjs-has-started.video-js .vjs-big-play-button,video-js.vjs-ended .vjs-big-play-button{display:block}.video-js .vjs-big-play-button{top:50%;left:50%;background-color:rgba(255,255,255,.28);font-size:4.5em;border-radius:50%}.video-js .vjs-big-play-button:active,.video-js .vjs-big-play-button:focus,.video-js:hover .vjs-big-play-button{background-color:rgba(0,0,0,.35)}.video-js .vjs-loading-spinner{border-color:rgba(255,255,255,.7)}.video-js .vjs-control-bar2{background-color:transparent}.video-js .vjs-control-bar{background-color:rgba(0,0,0,0)!important;color:#fff;font-size:12px}.video-js .vjs-play-progress,.video-js .vjs-volume-level{background-color:#2483d5}.video-js .vjs-big-play-button{height:2em!important;width:2em!important;line-height:1.9em!important;margin-top:-1em!important;margin-left:-1em;border-width:3px}.video-js .vjs-big-play-button:before,.video-js .vjs-icon-play:before{font-size:50px}.video-js .vjs-progress-holder{font-size:1.7em;border-radius:10px}.video-js .vjs-progress-holder .vjs-load-progress,.video-js .vjs-progress-holder .vjs-load-progress div,.video-js .vjs-progress-holder .vjs-play-progress,.video-js .vjs-slider,.vjs-volume-level{border-radius:10px}.video-js .vjs-load-progress{background:rgba(255,255,255,.5)} 



  script.
    var player = videojs('my-video');
