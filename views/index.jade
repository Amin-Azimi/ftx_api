block content


  header 
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.fixed-top
      .container-fluid
        a.navbar-brand(href="#")
          svg.bi.bi-x-diamond(xmlns="http://www.w3.org/2000/svg",width="16",height="16",fill="currentColor",viewBox="0 0 16 16")
            path(d="M7.987 16a1.526 1.526 0 0 1-1.07-.448L.45 9.082a1.531 1.531 0 0 1 0-2.165L6.917.45a1.531 1.531 0 0 1 2.166 0l6.469 6.468A1.526 1.526 0 0 1 16 8.013a1.526 1.526 0 0 1-.448 1.07l-6.47 6.469A1.526 1.526 0 0 1 7.988 16zM7.639 1.17 4.766 4.044 8 7.278l3.234-3.234L8.361 1.17a.51.51 0 0 0-.722 0zM8.722 8l3.234 3.234 2.873-2.873c.2-.2.2-.523 0-.722l-2.873-2.873L8.722 8zM8 8.722l-3.234 3.234 2.873 2.873c.2.2.523.2.722 0l2.873-2.873L8 8.722zM7.278 8 4.044 4.766 1.17 7.639a.511.511 0 0 0 0 .722l2.874 2.873L7.278 8z")
        button.navbar-toggler(type="button",data-mdb-toggle="collapse",data-mdb-target="#mainNavbar",aria-controls="mainNavabr",aria-expanded="false",aria-label="Toggle navigation")
          i.fas.fa-bars
        .collapse.navbar-collapse(id="mainNavabr")
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item.active
              a.nav-link(href="#intro") Home
            li.nav-item
              a.nav-link(href="#intro") About us
            li.nav-item
              a.nav-link(href="#intro") Contact us
  main.my-5
    .container
      -for match in mlist
        .row.mb-1
          .col-12
            p.mb-0=match.matchDate
        .row.shadow.align-items-center.mb-3.border.border-2.border-warning(style="border-style: dashed !important;")
          .col-1.my-2
            img.img-fluid(src=match.homelogo)
          .col-4
            h3=match.hometeam 
          .col-2.text-center.text-light
            a.btn.btn-success.btn-rounded.btn-block(type="button",data-mdb-ripple-color="#ffffff",href="/play1/2207")=match.matchtime
             i.fas.fa-download.ms-1
            small.text-dark=match.league
          .col-4
            h3.float-end=match.awayteam
          .col-1.my-2
            img.img-fluid(src=match.awaylogo)
      

